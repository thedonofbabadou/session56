import random
lives = 3
while True:
    print("You have", lives, "lives left.")
    # roll the dice
    dice = random.randint(1, 6)
    print("You rolled a", dice)
    # check if you win
    if dice == 6:
        print("\n\nYOU WIN!\n\n")
        break
    lives -= 1
    if lives == 0:
        print("\n\nYOU LOSE!\n\n")
        break


print("Thank you for playing. Goodbye.")
